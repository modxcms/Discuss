<div class="dis-post">
    <div class="dis-post-header">
        <div class="dis-post-actions"></div>
        <h3 class="dis-post-title" post="[[+id]]">[[+title]]</h3>
        <span class="dis-post-author">- by [[+username]] on [[+createdon:strtotime:date=`%b %d, %Y, %H:%M %p`]]</span>
    </div>
    <div class="dis-post-ct" id="dis-thread-ct-[[+id]]">
        <div class="dis-post-body">
        [[+content]]
        </div>
        <div class="dis-post-footer">
            [[%discuss.ip]]: [[+ip]]
        </div>
        <div class="dis-post-reply" id="dis-post-reply-[[+id]]"></div>
    </div>
</div>